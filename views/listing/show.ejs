<% layout("/layoutes/boilerplate") %>
<body>

    <div class="row">
        <div class="col-8 offset-2">
    <h3>All information of "<%= listingData.title %>" </h3>

    <div class="card" >
        <img src="<%=listingData.image%>" class="card-img-top" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listingData.title %></b> <br>
            <%=listingData.description%> <br>
            &#8377 <%=listingData.price.toLocaleString("en-IN")%> <br>
            <%=listingData.location%> <br>
            <%=listingData.country%> <br>
        </p>
        </div>
      </div>
    <br>
    <div class="btn-div">
        <a href="/listings/<%= listingData._id %>/edit" class="btn btn-dark btn-add edit-btn">Edit</a>

        <form action="/listings/<%= listingData._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark">Delete</button>
       </form>
    </div>
    
    
</div>
   <div class="col-8 offset-2 mt-2 mb-2">
      <h2>create a reviews</h2>
      <form action="/listings/<%= listingData._id %>/reviews" method="post">
            <div>
              <label for="redioo"></label>
              <input type="range" name="review[reting]" min="1" max="5" class="form-range">
            </div>

            <div class="mt-2 mb-2">
              <label for="comment" class="form-lable" ></label>
              <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="30"></textarea>
            </div>
            <button class="btn btn-outline-dark">add review</button>
      </form>
    </div>
</div>
</body>
