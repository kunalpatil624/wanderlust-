<% layout("/layoutes/boilerplate") %>
<body>
    
    <form action="/listings", method="post"  novalidate class="needs-validation">

        <div class="row" >
            
            <div class="col-8 offset-2">
                <br><br>
             <h3>add listing</h3>
        <div class="mb-3">
            <label for="title" class="form-lable"> Title</label>
            <input type="text", name="listing[title]", placeholder="Add a catchy title" class= "form-control" required> 

            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a title!</div>

        </div>

        <div class="mb-3">
            <label class="form-lable" for="description">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>

            <div class="invalid-feedback">Please choose a short description!</div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-lable">Image URL</label>
            <input type="text", name="listing[image]" class="form-control" placeholder="Enter image URL/link" > 
        </div>

        <div class="row">
          <div class="mb-3 col-4" >
            <label for="price" class="form-lable">Price</label>
            <input type="number", name="listing[price]" class="form-control" placeholder="1200" required> 
            
            <div class="invalid-feedback">Please choose a valid price!</div>
          </div>
        
          <div class="mb-3 col-8">
            <label for="country" class="form-lable">Country</label>
            <input type="text", name="listing[country]" class="form-control" placeholder="india" required>

            <div class="invalid-feedback">Please choose a valid country!</div>
          </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-lable">location</label>
            <input type="text", name="listing[location]" class="form-control" placeholder="jaipur, rajesthan, gujarat" required>
            
            <div class="invalid-feedback">Please choose a valid city!</div>
            
        </div>
        
        <button class="btn btn-dark btn-add">Add</button>
        <br><br>
        </div>
    </div>
    </form>
</body>
